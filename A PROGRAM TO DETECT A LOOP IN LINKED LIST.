class Node{
    int data;
    Node next;
    Node(int data){
        this.data = data;
        this.next = null;
    }
}


public class Loop_Detection {
    Node head;
    public boolean loop(){
        Node slow = head;
        Node fast = head;
        while(fast!= null && fast.next!= null ){
            slow = slow.next;
            fast = fast.next.next;
            if(fast == slow){
                return true;
            }
        }
        return false;
    }

    public static void main(String[] args) {
        Loop_Detection list = new Loop_Detection();
        Node n1 = new Node(1);
        Node n2 = new Node(2);
        Node n3 = new Node(3);
        Node n4 = new Node(4);
        Node n5 = new Node(5);
        Node n6 = new Node(6);

        list.head = n1;
        n1.next = n2;
        n2.next = n3;
        n3.next = n4;
        n4.next = n5;
        n5.next = n6;
        n6.next = n4;

        if(list.loop()){
            System.out.println("LOOP DETECTED");
        }
        else{
            System.out.println("LIST FREE OF LOOP");
        }


    }
}


